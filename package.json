{
    "name": "mdx-svelte",
    "version": "2.0.0",
    "description": "MDX for Svelte - Svelte in Markdown - A Markdown preprocessor for Svelte. A Svelte Preprocessor that allows you to write Svelte code in Markdown files.",
    "license": "MIT",
    "repository": "github:babakfp/mdx-svelte",
    "homepage": "https://babakfp.ir/docs/mdx-svelte",
    "main": "./dist/index.js",
    "scripts": {
        "dev": "tsc -w",
        "build": "tsc",
        "prepublishOnly": "tsc",
        "format": "prettier -w ."
    },
    "peerDependencies": {
        "@sveltejs/kit": "^2.0",
        "svelte": "^4.0"
    },
    "dependencies": {
        "@shikijs/rehype": "1.10.0",
        "hast-util-from-html": "2.0.1",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "rehype-stringify": "10.0.0",
        "remark-frontmatter": "5.0.0",
        "remark-frontmatter-yaml": "1.3.0",
        "remark-gfm": "4.0.0",
        "remark-parse": "11.0.0",
        "remark-rehype": "11.1.0",
        "remark-toc": "9.0.0",
        "remark-unwrap-images": "4.0.0",
        "stringify-entities": "4.0.4",
        "unified": "11.0.5",
        "unist-util-visit": "5.0.0",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.3.0",
        "@sveltejs/kit": "2.5.18",
        "@types/hast": "3.0.4",
        "@types/mdast": "4.0.4",
        "@types/node": "20.14.9",
        "prettier": "3.3.2",
        "svelte": "4.2.18",
        "typescript": "5.5.2",
        "vfile": "6.0.1"
    },
    "files": [
        "./dist/",
        "./src/transformers/unified/plugins/remark-github-alerts/styles/"
    ],
    "exports": {
        ".": "./dist/index.js",
        "./transformers/unified": "./dist/transformers/unified/index.js",
        "./transformers/unified/remark-github-alerts/*": "./src/transformers/unified/plugins/remark-github-alerts/styles/*"
    },
    "keywords": [
        "svelte",
        "markdown",
        "preprocess",
        "preprocessor",
        "mdx",
        "mdsvex"
    ],
    "type": "module"
}
