{
    "name": "svelte-in-markdown",
    "version": "0.0.1-beta.2",
    "description": "A preprocessor that allows you to write Svelte in Markdown.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-in-markdown",
    "main": "./dist/index.js",
    "scripts": {
        "dev": "tsc -w",
        "build": "tsc"
    },
    "peerDependencies": {
        "@sveltejs/kit": "^2.0",
        "svelte": "^4.0"
    },
    "dependencies": {
        "@shikijs/rehype": "1.2.4",
        "hast-util-from-html": "2.0.1",
        "hast-util-to-html": "9.0.1",
        "rehype-autolink-headings": "7.1.0",
        "rehype-external-links": "3.0.0",
        "rehype-slug": "6.0.0",
        "rehype-stringify": "10.0.0",
        "remark-frontmatter": "5.0.0",
        "remark-frontmatter-yaml": "0.0.3",
        "remark-gfm": "4.0.0",
        "remark-parse": "11.0.0",
        "remark-rehype": "11.1.0",
        "remark-toc": "9.0.0",
        "remark-unwrap-images": "4.0.0",
        "stringify-entities": "4.0.4",
        "unified": "11.0.4",
        "unist-util-visit": "5.0.0",
        "valibot": "0.30.0"
    },
    "devDependencies": {
        "@types/hast": "3.0.4",
        "@types/node": "20.12.5",
        "typescript": "5.4.4",
        "vfile": "6.0.1"
    },
    "files": [
        "./dist/",
        "!./dist/*.map"
    ],
    "exports": {
        ".": "./dist/index.js",
        "./transformers/unified": "./dist/transformers/unified/index.js"
    },
    "keywords": [
        "svelte",
        "markdown",
        "preprocessor",
        "mdx"
    ],
    "type": "module"
}
